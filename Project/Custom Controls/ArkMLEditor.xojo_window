#tag WindowCode
	#tag Event
		Sub Open()
		  Self.Field.BackgroundColor = &c1B384B
		  Self.Field.TextColor = &cFFFFFF
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h1
		Protected Sub ChangeSelectionColor()
		  Var UserColor As Color = Self.Field.StyledText.TextColor(Self.Field.SelectionStart, Self.Field.SelectionLength)
		  
		  If Not Color.SelectedFromDialog(UserColor, "Select Text Color") Then
		    Return
		  End If
		  
		  Self.Field.StyledText.TextColor(Self.Field.SelectionStart, Self.Field.SelectionLength) = UserColor
		  RaiseEvent TextChange
		End Sub
	#tag EndMethod


	#tag Hook, Flags = &h0
		Event TextChange()
	#tag EndHook


	#tag Property, Flags = &h21
		Private mRawMode As Boolean
	#tag EndProperty

	#tag ComputedProperty, Flags = &h1
		#tag Getter
			Get
			  Return Self.mRawMode
			End Get
		#tag EndGetter
		#tag Setter
			Set
			  If Self.mRawMode = Value Then
			    Return
			  End If
			  
			  If Value Then
			    // Convert RTF data to ArkML
			    Var ArkML As String = BeaconConfigs.Metadata.RTFToArkML(Self.Field.StyledText.RTFData)
			    Self.Field.Value = ""
			    Self.Field.BackgroundColor = &cFFFFFF
			    Self.Field.TextColor = &c000000
			    Self.Field.Value = ArkML
			    Self.Field.AllowStyledText = False
			    Self.mRawMode = True
			  Else
			    // Convert ArkML to RTF
			    Var RTF As String = BeaconConfigs.Metadata.ArkMLToRTF(Self.Field.Value)
			    Self.Field.Value = ""
			    Self.Field.AllowStyledText = True
			    Self.Field.BackgroundColor = &c1B384B
			    Self.Field.TextColor = &cFFFFFF
			    Self.Field.StyledText.RTFData = RTF
			    Self.mRawMode = False
			  End If
			  
			  Self.ControlToolbar.PreviewButton.Toggled = Not Self.mRawMode
			End Set
		#tag EndSetter
		Protected RawMode As Boolean
	#tag EndComputedProperty

	#tag ComputedProperty, Flags = &h0
		#tag Getter
			Get
			  Return Self.Field.StyledText.RTFData
			End Get
		#tag EndGetter
		#tag Setter
			Set
			  Self.Field.StyledText.RTFData = Value
			End Set
		#tag EndSetter
		RTFData As String
	#tag EndComputedProperty


