	#tag Event
		Sub TextChange()
		  RaiseEvent TextChange
		End Sub
	#tag EndEvent
	#tag Event
		Function ConstructContextualMenu(base as MenuItem, x as Integer, y as Integer) As Boolean
		  #Pragma Unused X
		  #Pragma Unused Y
		  
		  Var CutItem As MenuItem = EditCut.Clone
		  Var CopyItem As MenuItem = EditCopy.Clone
		  Var PasteItem As MenuItem = EditPaste.Clone
		  Var ClearItem As MenuItem = EditClear.Clone
		  Var ColorItem As New MenuItem("Change Text Colorâ€¦", "pickcolor")
		  
		  Var HasSelection As Boolean = Me.SelectionLength > 0
		  CutItem.Enabled = HasSelection
		  CopyItem.Enabled = HasSelection
		  ClearItem.Enabled = HasSelection
		  ColorItem.Enabled = HasSelection
		  
		  Var Board As New Clipboard
		  Var CanPaste As Boolean = Board.TextAvailable
		  PasteItem.Enabled = CanPaste
		  
		  Base.AddMenu(CutItem)
		  Base.AddMenu(CopyItem)
		  Base.AddMenu(PasteItem)
		  Base.AddMenu(ClearItem)
		  Base.AddMenu(New MenuItem(MenuItem.TextSeparator))
		  Base.AddMenu(ColorItem)
		  Return True
		End Function
	#tag EndEvent
	#tag Event
		Function ContextualMenuAction(hitItem as MenuItem) As Boolean
		  If HitItem Is Nil Or IsNull(HitItem.Tag) Or HitItem.Tag.Type <> Variant.TypeString Then
		    Return True
		  End If
		  
		  Select Case HitItem.Tag
		  Case "pickcolor"
		    Self.ChangeSelectionColor
		    Return True
		  End Select
		End Function
	#tag EndEvent
	#tag Event
		Sub SelChange()
		  Self.ControlToolbar.ColorButton.Enabled = Me.SelectionLength > 0
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events ControlToolbar
	#tag Event
		Sub Action(Item As BeaconToolbarItem)
		  Select Case Item.Name
		  Case "PreviewButton"
		    Self.RawMode = Not Self.RawMode
		  Case "ColorButton"
		    Self.ChangeSelectionColor
		  End Select
		End Sub
	#tag EndEvent
	#tag Event
		Sub Open()
		  Var PreviewButton As New BeaconToolbarItem("PreviewButton", IconToolbarView, "Toggle preview mode")
		  PreviewButton.Toggled = (Self.mRawMode = False)
		  Me.RightItems.Append(PreviewButton)
		  
		  Var ColorButton As New BeaconToolbarItem("ColorButton", IconToolbarPaint, False, "Change text color")
		  Me.LeftItems.Append(ColorButton)
		End Sub
	#tag EndEvent
#tag EndEvents
