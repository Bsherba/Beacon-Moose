#tag WindowCode
	#tag Method, Flags = &h0
		Shared Function Present(Parent As Window, Set As Beacon.ItemSet) As Beacon.ItemSet
		  Dim Win As New SetPropertiesEditor
		  Win.mSet = New Beacon.ItemSet(Set)
		  Win.UpdateUI()
		  Win.ShowModalWithin(Parent.TrueWindow)
		  
		  Dim NewSet As Beacon.ItemSet
		  If Not Win.mCancelled Then
		    NewSet = Win.mSet
		  End If
		  Win.Close
		  
		  Return NewSet
		End Function
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub UpdateUI()
		  Self.mUpdating = True
		  Self.LabelField.Text = Self.mSet.Label
		  Self.MinItemsField.Text = Str(Self.mSet.MinNumItems, "-0")
		  Self.MaxItemsField.Text = Str(Self.mSet.MaxNumItems, "-0")
		  Self.WeightSlider.Value = Self.mSet.Weight * 100
		  Self.WeightField.Text = Beacon.PrettyText(Self.mSet.Weight * 100)
		  Self.DuplicatesCheck.Value = Self.mSet.ItemsRandomWithoutReplacement
		  Self.mUpdating = False
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h21
		Private mCancelled As Boolean
	#tag EndProperty

	#tag Property, Flags = &h21
		Private mSet As Beacon.ItemSet
	#tag EndProperty

	#tag Property, Flags = &h21
		Private mUpdating As Boolean
	#tag EndProperty


#tag EndWindowCode

