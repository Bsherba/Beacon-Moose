	#tag EndEvent
#tag EndEvents
#tag Events MaxItemsField
	#tag Event
		Sub TextChange()
		  If Self.mUpdating Then
		    Return
		  End If
		  
		  Self.mSet.MaxNumItems = Val(Me.Text)
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events MaxItemsStepper
	#tag Event
		Sub Down()
		  Dim MinItems As UInteger = CDbl(MinItemsField.Text)
		  Dim MaxItems As UInteger = CDbl(MaxItemsField.Text)
		  MaxItems = Max(MaxItems - 1, MinItems)
		  MaxItemsField.Text = Format(MaxItems, "0")
		End Sub
	#tag EndEvent
	#tag Event
		Sub Up()
		  Dim EntryCount As UInteger = Self.mSet.Count
		  Dim MaxItems As UInteger = CDbl(MaxItemsField.Text)
		  MaxItems = Min(MaxItems + 1, EntryCount)
		  MaxItemsField.Text = Format(MaxItems, "0")
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events MinItemsField
	#tag Event
		Sub TextChange()
		  If Self.mUpdating Then
		    Return
		  End If
		  
		  Self.mSet.MinNumItems = Val(Me.Text)
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events MinItemsStepper
	#tag Event
		Sub Down()
		  Dim MinItems As UInteger = CDbl(MinItemsField.Text)
		  MinItems = Max(MinItems - 1, 1)
		  MinItemsField.Text = Format(MinItems, "0")
		End Sub
	#tag EndEvent
	#tag Event
		Sub Up()
		  Dim MinItems As UInteger = CDbl(MinItemsField.Text)
		  Dim MaxItems As UInteger = CDbl(MaxItemsField.Text)
		  MinItems = Min(MinItems + 1, MaxItems)
		  MinItemsField.Text = Format(MinItems, "0")
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events WeightSlider
	#tag Event
		Sub ValueChanged()
		  WeightField.Text = Str(Me.Value, "-0")
		  
		  If Self.mUpdating Then
		    Return
		  End If
		  
		  Self.mSet.Weight = Me.Value / 100
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events WeightField
	#tag Event
		Sub TextChange()
		  If Self.Focus <> Me Or Self.mUpdating Then
		    Return
		  End If
		  
		  Dim Value As Double = CDbl(Me.Text)
		  Self.mSet.Weight = Value / 100
		  WeightSlider.Value = Round(Self.mSet.Weight * 100)
		End Sub
	#tag EndEvent
#tag EndEvents
